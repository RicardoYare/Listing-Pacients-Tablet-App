<!-- res/drawable/textview_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5C5050"/> <!-- Sombra gris con transparencia -->

        </shape>
    </item>
    <!-- Fondo -->
    <item android:left="0dp" android:top="0dp" android:right="5dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFCCCC"/> <!-- Color de fondo blanco -->
            <stroke
                android:width="1dp"
                android:color="#212020"/> <!-- Color y ancho del borde -->

        </shape>
    </item>
</layer-list>

